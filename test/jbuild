
(executables
 ((names (plugin_loader))
  (modules (plugin_loader))
  (libraries
   (async
    core
    ocaml_plugin))
  (preprocess (pps (ppx_jane ppxlib.runner)))))


(alias
 ((name runtest)
  (deps (plugin_loader.exe
         test_with_sexp.ml
         test_with_sexp.mli))
  (action (bash "./plugin_loader.exe test_with_sexp.mli"))
))

(alias
 ((name runtest)
  (deps (plugin_loader.exe
         test_with_sexp.ml
         test_with_sexp.mli))
  (action (bash "./plugin_loader.exe test_with_sexp.ml"))
))

(alias
 ((name runtest)
  (deps (plugin_loader.exe
         test_with_sexp.ml
         test_with_sexp.mli
         test_with_sexp_dep.ml
         test_with_sexp_dep.mli))
  (action (bash "./plugin_loader.exe --find-dependencies test_with_sexp_dep.ml"))
))


(jbuild_version 1)
